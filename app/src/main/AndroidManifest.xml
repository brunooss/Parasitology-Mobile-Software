<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.android.parasitologymobilesoftware">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SubjectActivity" android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.Home"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".IntroductionActivity"
            android:theme="@style/AppTheme.IntroductionActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".SigninActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".SignupActivity" android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/AppTheme.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".StudentPreferenceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RecoverPasswordActivity"
            android:largeHeap="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>