<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dip" />
            <solid android:color="#BFBDB8" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="8dip" />
                <gradient
                    android:angle="90"
                    android:centerColor="#6CDF5E"
                    android:endColor="#66E19F"
                    android:startColor="#A9F97D"
                    android:type="linear"/>
            </shape>
        </clip>
    </item>
</layer-list>