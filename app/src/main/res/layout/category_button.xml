<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="0dp" android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewCategoryBackgroundIcon"
            app:layout_constraintEnd_toEndOf="@+id/imageViewCategoryBackgroundIcon"
            app:layout_constraintStart_toStartOf="@+id/imageViewCategoryBackgroundIcon"
            app:layout_constraintTop_toTopOf="@+id/imageViewCategoryBackgroundIcon"
            app:layout_constraintVertical_bias="1.0" app:srcCompat="@drawable/category_button_background_filled"/>
        <ImageView
            android:id="@+id/imageViewCategoryBackgroundIcon"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icons8_happy_100"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/textViewCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp" android:fontFamily="@font/futura_medium_bt"
        android:text="TEXTO" android:textColor="@color/colorTextPrimary"
        android:textSize="16sp" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"/>
</androidx.constraintlayout.widget.ConstraintLayout>