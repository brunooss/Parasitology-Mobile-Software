<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0699F7" tools:context=".StudentPreferenceActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_marginStart="16dp" android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp" android:fontFamily="@font/futura_medium_bt"
        android:text="Antes de começarmos, queremos conhecer melhor as suas preferências"
        android:textAlignment="center" android:textColor="@color/colorTextSecondary"
        android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" android:fontFamily="@font/futura_light_bt"
        android:text="Qual das metodologias abaixo mais lhe interessa?" android:textAlignment="center"
        android:textColor="@color/colorTextPrimary" android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutStudentFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="350dp"
        android:background="@drawable/custom_buttom_yellow_background"
        android:clickable="true"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <TextView
            android:id="@+id/textViewStudentCardFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/futura_medium_bt"
            android:text="1• TEORIA"
            android:textAlignment="center"
            android:textColor="@color/colorTextPrimary"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textViewStudentCardSecond"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewStudentCardSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/futura_medium_bt"
            android:text="2• EXERCÍCIOS"
            android:textColor="@color/colorTextPrimary"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/imageViewStudentCardFirst"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewStudentCardFirst" />

        <TextView
            android:id="@+id/textViewStudentCardThird"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/futura_medium_bt"
            android:text="3• REVISÃO"
            android:textColor="@color/colorTextPrimary"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textViewStudentCardSecond"
            app:layout_constraintTop_toBottomOf="@+id/textViewStudentCardSecond" />

        <ImageView
            android:id="@+id/imageViewStudentCardFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/icons8_classroom_100" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutStudentSecond"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/custom_buttom_yellow_background"
        android:elevation="5dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayoutStudentFirst"
        app:layout_constraintStart_toStartOf="@+id/constraintLayoutStudentFirst"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutStudentFirst">

        <TextView
            android:id="@+id/textViewStudentCardFirst2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/futura_medium_bt"
            android:text="1• TEORIA E EXERCÍCIOS SIMULTÂNEOS"
            android:textAlignment="textStart"
            android:textColor="@color/colorTextPrimary"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/imageViewStudentCardFirst2"
            app:layout_constraintStart_toStartOf="@+id/textViewStudentCardSecond2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewStudentCardSecond2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/futura_medium_bt"
            android:text="2• REVISÃO"
            android:textColor="@color/colorTextPrimary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageViewStudentCardFirst2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewStudentCardFirst2" />

        <ImageView
            android:id="@+id/imageViewStudentCardFirst2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/icons8_inovation100" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_marginStart="48dp" android:layout_marginEnd="48dp"
        android:layout_marginBottom="16dp" android:background="@drawable/custom_buttom_yellow_background"
        android:fontFamily="@font/futura_light_bt" android:onClick="onButtonStudentPreferenceClick"
        android:text="@android:string/ok"
        android:textColor="@color/colorTextPrimary" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>