<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@drawable/custom_linear_layout_signup_background"
                                                   android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewUserInformationIcon"
        android:layout_width="24dp" android:layout_height="24dp"
        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:srcCompat="@drawable/ic_person_white_24dp"/>
    <TextView
        android:id="@+id/textViewUserInformationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
        android:fontFamily="@font/futura_light_bt" android:text="Title"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewUserInformationIcon"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/textViewUserInformationChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp" android:layout_marginBottom="8dp" android:clickable="true"
        android:fontFamily="@font/futura_light_bt" android:text="Alterar"
        android:textColor="@color/colorTextPrimary" android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>